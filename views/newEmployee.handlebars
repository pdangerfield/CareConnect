
{{> CSS }}
<div class="row window d-flex">
  {{!-- controls --}}
  <container class="col-3" id="dashboard-controls">
    <div class="row">
      <img src="/assets/logos/vertical_logo.svg" alt="logo" class="logo" id="vertical-logo">
    </div>
    <div class="row dashboard-menu">
      <ul>
        <li class="dashboard_menu_item">
          <a href="/dashboard">
              <img src="/assets/controls_icons/Dashboard_Icon_Inactive.svg" alt="controls icon">
              Dashboard 
          </a>
         </li>
         <li class="dashboard_menu_item">
          <a href="/api/employees">
            <img src="/assets/controls_icons/Employee_Icon_Active.svg" alt="employees icon">
            <span id="active-label">Employees</span>
            </a>
        </li>
        <li class="dashboard_menu_item">
          <a href="/api/departments">
            <img src="/assets/controls_icons/Departments_Icon_Inactive.svg" alt="departments icon">
            Departments
          </a>
        </li>
        <li class="dashboard_menu_item">
          <a  href="/api/roles">
            <img src="/assets/controls_icons/roles_icon.svg" alt="roles icon">
            <span>Roles</span>
          </a>
        </li>
      </ul>
    </div>
  </container>
    {{!-- display --}}
<container class="col-9" id="dashboard-display">
    {{!-- nav bar --}}
    <nav class="row nav-bar">

        <div class="col-10">
        </div>
        <div class="col-2 acct-controls">
            <img src="/assets/controls_icons/logout_icon.svg" alt="logout icon" id="logout">
        </div>
    </nav>
    
    <h1 class="display-label">Add Employee</h1>

    <section class="add-card-container">
        <form class="new-employee-form"></form>
        <div class="add-card">
            <div>
                <input class="input" placeholder="First name" type="text" id="first_name" name="first_name" />
            </div>
            <div>
                <input class="input" placeholder="Last name" type="text" id="last_name" name="last_name" />
            </div>
            <div>
                <select id="title" name="title" placeholder="Choose a role">
                    <option value="" disabled selected>Choose a role</option>
                    {{#each roles as |role|}}
                    <option value="{{role.id}}">{{role.title}}</option>
                    {{/each}}
                </select>
            </div>
            <button class="button add-emp-btn" type="submit" id="emp-add-btn">Save</button>

        </div>
        </form>
    </section>

        <button class="button" id="back-button" href="api/employees"><img src="/assets/controls_icons/back-arrow.svg" alt="back" id="back-icon">Go back</button>


</container>


<script type="text/javascript" src="/js/add-emp.js"></script>
