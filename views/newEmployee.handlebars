{{> dashboardControls }}
    {{!-- display --}}
<container class="col-9" id="dashboard-display">
    {{!-- nav bar --}}
    <nav class="row my-4 nav-bar">
        <div class="col-10">
        </div>
        <div class="col-2 acct-controls">
            <img src="/assets/controls_icons/logout_icon.svg" alt="logout icon" id="logout">
        </div>
    </nav>
    
    <h1 class="display-label">Add Employee</h1>

    <section class="add-card-container">
        <form class="new-employee-form"></form>
        <div class="add-card">
            <div>
                <input class="input" placeholder="First name" type="text" id="first_name" name="first_name" />
            </div>
            <div>
                <input class="input" placeholder="Last name" type="text" id="last_name" name="last_name" />
            </div>
            <div>
                <select id="title" name="title" placeholder="Choose a role">
                    <option value="" disabled selected>Choose a role</option>
                    {{#each roles as |role|}}
                    <option value="{{role.id}}">{{role.title}}</option>
                    {{/each}}
                </select>
            </div>
            <button class="button add-emp-btn" type="submit" id="emp-add-btn">Save</button>

        </div>
        </form>
    </section>
        <button class="button" href="/api/employees"><img src="/assets/controls_icons/back-arrow.svg" alt="back" id="back-icon">Go back</button>

</container>


<script type="text/javascript" src="/js/add-emp.js"></script>
<script type="text/javascript" src="/js/edit-emp.js"></script>
<script type="text/javascript" src="/js/delete-emp.js"></script>